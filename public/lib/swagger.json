{
  "openapi": "3.0.0",
  "info": {
    "title": "API Documentation",
    "version": "1.0.0",
    "description": "Documentation of routes in the application"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1",
      "description": "Servidor Local"
    }
  ],
  "paths": {
    "/year": {
      "get": {
        "summary": "List years",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ListOfYears"
                }
              }
            }
          }
        }
      }
    },
    "/year/{yearNumber}": {
      "post": {
        "summary": "Create year",
        "parameters": [
          {
            "name": "yearNumber",
            "in": "path",
            "description": "Number of year",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Year successfully created"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Year": {
        "type": "object",
        "properties": {
          "year": {
            "type": "integer",
            "format": "int64",
            "example": 2025
          }
        }
      },
      "ListOfYears": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Year"
            }
          }
        }
      },
      "Month": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "January"
          },
          "year": {
            "$ref": "#/components/schemas/Year"
          }
        }
      }
    }
  }
}
